<% provide(:title, "ระบบ#{get_announcement_role_th(@role)}") %>

<div class="container">
  <%= generate_breadcrumb({"หน้าแรก": root_path, "ระบบ#{get_announcement_role_th(@role)}": "active"}) %>

  <div class="page-header">
    <h1>
      ระบบ<%= get_announcement_role_th(@role) %>
      <small><%= @announcements.count %> ประกาศ</small>
    </h1>
  </div>

  <div class="table-resposive">
    <table class="table table-hover table-bordered table-striped">
      <tr>
        <th class="center">ID</th>
        <th class="center"></th>
        <th class="center">รูปภาพ</th>
        <th class="center">จำนวน (ตัน)</th>
        <th class="center">ราคา (บาท/ตัน)</th>
        <th class="center">ราคารวม</th>
        <th class="center">ข้อเสนอ</th>
        <th class="center">สิ้นสุด</th>
        <th class="center"></th>
      </tr>
      <% @announcements.each do |announcement| %>
        <%= render partial: "tr_announcement", locals: {announcement: announcement} %>
      <% end %>
    </table>
  </div>

  <%= will_paginate @announcements, class: "center" %>

</div>
