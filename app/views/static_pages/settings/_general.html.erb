<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title"><%= t('views.static_pages.settings.general') %></h3>
  </div>
  <div class="panel-body">

    <div class="table-responsive">
      <table class="table table-hover">
        <tr>
          <th><%=t 'activerecord.attributes.user.name' %></th>
          <td><%= current_user.name %></td>
        </tr>
        <tr>
          <th><%=t 'activerecord.attributes.user.email' %></th>
          <td><%= current_user.email %></td>
        </tr>
      </table>
    </div>
    <%= link_to t('views.users.edit.update_profile'), edit_user_path(id: current_user, locale: I18n.locale), class: "btn btn-default btn-block" %>

  <!-- ./panel-body -->
  </div>
</div>
