<% provide(:title, t('sign_up')) %>
<% provide(:user_form_button, t('sign_up')) %>

<div class="row">
  <div class="col-md-4 col-md-offset-1">
    <div class="list-group">
      <a href="#" class="list-group-item">
        <i class="fa fa-facebook-official fa-fw"></i> <%=t 'views.users.new.sign_up_with_facebook' %>
      </a>

      <a href="#" class="list-group-item">
        <i class="fa fa-twitter-square fa-fw"></i> <%=t 'views.users.new.sign_up_with_twitter' %>
      </a>
    </div>
  </div>

  <div class="col-md-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        <i class="fa fa-envelope-o"></i>
        <%=t 'views.users.new.sign_up_with_email' %>
      </div>
      <div class="panel-body">
         <%= render 'form' %>
      </div>
    </div>
  </div>

</div>
