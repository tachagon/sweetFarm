<% provide(:title, t('sign_up')) %>
<% provide(:user_form_button, t('sign_up')) %>

<div class="row">
  <div class="col-md-4 col-md-offset-1">
    <div class="list-group">
      <a href="<%= login_facebook_path %>" class="list-group-item">
        <i class="fa fa-facebook fa-fw"></i> <%=t 'views.users.new.sign_up_with_facebook' %>
      </a>

      <a href="<%= login_google_path %>" class="list-group-item">
        <i class="fa fa-google fa-fw"></i> <%=t 'views.users.new.sign_up_with_google' %>
      </a>
    </div>
  </div>

  <div class="col-md-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        <i class="fa fa-envelope-o"></i>
        <%=t 'views.users.new.sign_up_with_email' %>
      </div>
      <div class="panel-body">
        <%= form_for @user, url: users_path(locale: I18n.locale) do |f| %>
          <%= render partial: 'form', locals: {f: f} %>
        <% end %>
      </div>
    </div>
  </div>

</div>
