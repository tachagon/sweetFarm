<% provide(:title, t('login')) %>

<div class="row">
  <div class="col-md-4 col-md-offset-1">
    <div class="list-group">
      <a href="#" class="list-group-item">
        <i class="fa fa-facebook-official fa-fw"></i> <%=t 'views.sessions.new.login_with_facebook' %>
      </a>

      <a href="#" class="list-group-item">
        <i class="fa fa-twitter-square fa-fw"></i> <%=t 'views.sessions.new.login_with_twitter' %>
      </a>
    </div>
  </div>

  <div class="col-md-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        <i class="fa fa-envelope-o"></i>
        <%=t 'views.sessions.new.login_with_email' %>
      </div>
      <div class="panel-body">
         <%= form_for(:session, url: login_path) do |f| %>
           <%= f.label :email, t('activerecord.attributes.user.email') %>
           <%= f.email_field :email, class: 'form-control' %>

           <%= f.label :password, t('activerecord.attributes.user.password') %>
           <%= f.password_field :password, class: 'form-control' %>

          <div class="checkbox">
           <%= f.label :remember_me do %>
            <%= f.check_box :remember_me %>
            <span><%=t 'remember_me' %></span>
           <% end %>
           </div>

           <%= f.submit t('login'), class: 'btn btn-primary btn-block' %>

         <% end %>
      </div>
    </div>
    <!-- end panel -->
    <div class="panel panel-default">
      <div class="panel-body">
         <%=t 'views.sessions.new.new_user' %>
         <%= link_to t('sign_up'), new_user_path %>
      </div>
    </div>
  </div>

</div>
<!-- /.row -->
