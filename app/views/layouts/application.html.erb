<!DOCTYPE html>
<html>
<head>
  <title>Sweet Farm :) <%= yield(:title) %></title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="container">
	<%= link_to 'Eng', root_path(locale: 'en') %>
	<%= link_to 'Thai', root_path(locale: 'th') %>
</div>
<div class="container-fluid">
	<%= yield %>	
</div>

<div class="container">
	<div class="row">
		<%= debug(params) if Rails.env.development? %>
	</div>
</div>

</body>
</html>
