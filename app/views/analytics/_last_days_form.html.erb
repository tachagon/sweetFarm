<form action="<%= announcement_analytics_path %>" method="get" accept-charset="utf-8" id="last_days_form" class="form-inline">

  <div class="form-group">
  <label for="last_days">ข้อมูล</label>
    <select name="last_days" class="form-control" id="last_days">
      <option value="7" <%= 'selected' if @last_days == '7' %>>7 วัน</option>
      <option value="15" <%= 'selected' if @last_days == '15' %>>15 วัน</option>
      <option value="30" <%= 'selected' if @last_days == '30' %>>30 วัน</option>
      <option value="60" <%= 'selected' if @last_days == '60' %>>60 วัน</option>
      <option value="90" <%= 'selected' if @last_days == '90' %>>90 วัน</option>
    </select>
  </div>

</form>

<script type="text/javascript">
  $(document).ready(function () {
    $('#last_days').on('change', function () {
      $('#last_days_form').submit();
    });
  });
</script>
