<%= render 'shared/error_messages', object: f.object %>

<div class="form-group">
  <%= f.label :amount, "จำนวน" %>
  <div class="input-group">
    <%= number_field :sale, :amount, min: 1, class: 'form-control', onchange: 'show_result()' %>
    <div class="input-group-addon">
      ตัน
    </div>
  </div>
</div>

<div class="form-group">
  <%= f.label :price, "ราคา" %>
  <div class="input-group">
    <%= number_field :sale, :price, min: 1, class: 'form-control', onchange:'show_result()' %>
    <div class="input-group-addon">บาท / ตัน</div>
  </div>
  <span class="help-block" id="result-price">ราคารวม 0 บาท</span>
</div>

<div class="form-group">
  <div class="form-control-static">
    เลือกพื้นที่
  </div>
</div>

<div class="form-group">
  <%= f.label :province, "จังหวัด" %>
  <select name="province" class="form-control" id="sale_province"></select>
</div>

<div class="form-group">
  <%= f.label :amphur, "อำเภอ" %>
  <select name="amphur" class="form-control" id="sale_amphur"></select>
</div>

<div class="form-group">
  <%= f.label :district_id, "ตำบล" %>
  <%= f.select :district_id, [], {}, {class: 'form-control'} %>
</div>

<%= f.submit "ขายอ้อย", :disable_with => 'ขายอ้อย...', class: 'btn btn-primary btn-block' %>
